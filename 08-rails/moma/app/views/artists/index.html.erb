<h1>All artists</h1>

<% @artists.each do |artist| %>
    <%= image_tag artist.image if artist.image.present? %>
    <ul>
        <li>Name: <%= link_to artist.name, artist_path(artist.id) %></li>
        <li>Nationality: <%= artist.nationality %></li>
        <li>Date of birth: <%= artist.dob %></li>
        <li>Period: <%= artist.period %></li>
    </ul>
<% end %>